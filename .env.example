# =============================================================================
# ORIGO SaaS Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE (REQUIRED)
# Get these from: https://app.supabase.com/project/_/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------------------------------------------
# STRIPE (REQUIRED for payments)
# Get these from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (get from: https://dashboard.stripe.com/products)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_your-starter-price-id
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_your-pro-price-id
NEXT_PUBLIC_STRIPE_PREMIUM_PRICE_ID=price_your-premium-price-id

# -----------------------------------------------------------------------------
# CLAUDE AI (REQUIRED for brief generation)
# Get from: https://console.anthropic.com/settings/keys
# -----------------------------------------------------------------------------
ORIGO_CLAUDE_API_KEY=sk-ant-your-api-key-here

# -----------------------------------------------------------------------------
# RESEND (REQUIRED for emails)
# Sign up at: https://resend.com/
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your-api-key-here
RESEND_FROM_EMAIL=ORIGO <hello@your-domain.com>

# -----------------------------------------------------------------------------
# APP CONFIGURATION (REQUIRED)
# Set to your production domain (or localhost for development)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# -----------------------------------------------------------------------------
# SENTRY (REQUIRED for error tracking)
# Create project at: https://sentry.io/
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here

# -----------------------------------------------------------------------------
# CRON JOBS (REQUIRED for automated emails)
# Generate a random secure string (e.g., openssl rand -hex 32)
# -----------------------------------------------------------------------------
CRON_SECRET=your-random-secret-here

# -----------------------------------------------------------------------------
# POSTHOG ANALYTICS (OPTIONAL)
# Sign up at: https://posthog.com/
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# VERCEL (Automatically set in production)
# -----------------------------------------------------------------------------
# VERCEL_URL - Auto-set by Vercel, no need to configure
